  margin-bottom 10px

.rss-card
  margin-left auto
  margin-right auto
  &-image-container
    height auto
    margin-top: 10px
    // display inline-block
    // position absolute
    // width 50
  &-image
    // display: inline-block;
    // position absolute
    margin 0 10px 10px 10px 10px
